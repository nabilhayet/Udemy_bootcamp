<!DOCTYPE html>
<html>

<head>
    <title>Products </title>
</head>

<body>

    <h1>
        <%= category %> Products
    </h1>
    <ul>
        <% for(let product of products) { %>
            <li>
                <a href="/products/<%=product._id%>">
                    <%= product.name%>
                </a>
            </li>
            <% } %>
    </ul>
    <a href="/products/new">Add Product</a>
    <%if(category !=='All' ) { %>
        <a href="/products">All Products</a>
        <% } %>
</body>

</html>